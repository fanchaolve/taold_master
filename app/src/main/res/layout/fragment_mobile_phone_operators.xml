<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f2f5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/tel_name"
                android:textAppearance="@style/TextAppear.Theme.111111_Size15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13656714459"
                android:textAppearance="@style/TextAppear.Theme.111111_Size15"
                />

        </LinearLayout>

        <include layout="@layout/line_e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/service_passworld"
                android:textAppearance="@style/TextAppear.Theme.111111_Size15"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_password"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/color_hint"
                android:hint="@string/please_sp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppear.Theme.111111_Size15"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/ck_agree"
            style="@style/mycheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_hint"
            android:textAppearance="@style/TextAppear.Theme.hint_Size15"
            android:text="@string/agreement1"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement2"
            android:textAppearance="@style/TextAppear.Theme.f1a942_Size14"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textColor="#FEFEFE"
        android:gravity="center"
        android:text="@string/next"
        android:background="@drawable/bg_loan_button"/>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/query_detail"
        android:textSize="14sp"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="42dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/query_detail2"
        android:lineSpacingExtra="8dp"
        android:textSize="14sp"
        />



</LinearLayout>
