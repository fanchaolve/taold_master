<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/12期"
            android:textAppearance="@style/TextAppear.Theme.font40_Size14"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_period"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1389.34"
                android:textColor="@color/color_111111"
                android:textSize="23sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(已逾期)"
                android:textColor="@color/color_hint"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="还款日：2017/09/09"
            android:textAppearance="@style/TextAppear.Theme.111111_Size14"/>

        <TextView
            android:id="@+id/tv_paybtn"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_period"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_loan_button"
            android:gravity="center"
            android:text="立即还款"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"/>

</LinearLayout>