<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f2f5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="@string/base_info"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppear.Theme.111111_Size14"/>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/item_edu"
            app:left_name="@string/edu"
            app:hint="@string/edu_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/line_e" />

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/item_address"
            app:left_name="@string/address"
            app:hint="@string/address_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/tv_company_name"
            app:left_name="@string/company_name"
            app:hint="@string/company_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/line_e" />

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/tv_company_address"
            app:left_name="@string/company_address"
            app:hint="@string/company_address_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_address"
            app:left_name="@string/address"
            app:hint="@string/address_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/color_f0f2f5"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_company_name"
            app:left_name="@string/company_name"
            app:hint="@string/company_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_company_addr"
            app:left_name="@string/company_addr"
            app:hint="@string/company_addr_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="@string/contact"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppear.Theme.111111_Size14"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_main_phone"
            app:left_name="@string/phone"
            app:hint="@string/phone_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_main_name"
            app:left_name="@string/name"
            app:hint="@string/name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bb.taold.widget.Line_ItemView
            android:id="@+id/item_main_rela"
            app:left_name="@string/rela"
            app:hint="@string/rela_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f0f2f5">
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:textColor="#FEFEFE"
            android:gravity="center"
            android:text="提交"
            android:background="@drawable/button_bg"/>
    </RelativeLayout>

</LinearLayout>

