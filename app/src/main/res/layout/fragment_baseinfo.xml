<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f2f5"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:text="@string/base_info"
        android:layout_marginBottom="10dp"
        android:textAppearance="@style/TextAppear.Theme.111111_Size14"/>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/item_edu"
            app:left_name="@string/edu"
            app:hint="@string/edu_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/line_e" />

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/item_address"
            app:left_name="@string/address"
            app:hint="@string/address_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/tv_company_name"
            app:left_name="@string/company_name"
            app:hint="@string/company_name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/line_e" />

        <com.bb.taold.widget.Line_ItemView
            android:paddingRight="15dp"
            android:id="@+id/tv_company_address"
            app:left_name="@string/company_address"
            app:hint="@string/company_address_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>

